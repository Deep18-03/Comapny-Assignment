@model SourceControlAssignment.Models.Person
@{
    Layout = "";
}

<html>
<head>
    <title>Registration</title>
    <script src="~/Scripts/jquery-3.4.1.slim.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!--Cliet Side Custom Valdiation-->
    <script src="~/Scripts/MyCustomValidate.js"></script>
    <link href="~/Content/bootstrap.css" rel=" stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel=" stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <style>


        #box {
            /*border: 1px solid black;*/
            height: 100%;
        }

        #main-div {
            height: 900px;
            
        
        }

        /*bos inside design*/
        .insidebox {
            border: 1px solid black;
            margin: 5% auto 10% auto;
            max-width: 500px;
            min-width: 200px;
            padding-left: 60px;
            padding-right: 60px;
            border-radius: 10px;
            background-color: rgba(255,0,0,0.3);
        }
        /*header*/
        div h2 {
            text-align: center;
            font-size: 24px;
            padding: 10px;
            color: white;
        }
        /*span tag*/
        .text {
            color: white;
        }
    </style>
</head>
<body>
    <div id="main-div">
        <div id="box" class="img-responsive">
            @using (Html.BeginForm("RegistrationForm", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="insidebox">
                    <div>
                        <h2>Registration</h2>

                    </div>

                    <!--FirstName-->
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></div>
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "First Name" })

                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(x => x.FirstName)</span>
                    </div>

                    <!--Last Name-->
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></div>
                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "Last Name" })

                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(x => x.LastName)</span>
                    </div>

                    <!--City Name-->
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-location-arrow" aria-hidden="true"></i></div>
                            @Html.TextBoxFor(x => x.City, new { @class = "form-control", @placeholder = "City" })

                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(x => x.City)</span>
                    </div>

                    <!--State Name-->
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-location-arrow" aria-hidden="true"></i></div>
                            @Html.TextBoxFor(x => x.State, new { @class = "form-control", @placeholder = "State" })

                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(x => x.State)</span>
                    </div>

                    <!--Address-->
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-address-book-o" aria-hidden="true"></i></div>
                            @Html.TextAreaFor(x => x.Address, new { @class = "form-control", @placeholder = "Address" })

                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(x => x.Address)</span>
                    </div>

                    <!--Password-->
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i> </div>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })

                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(model => model.Password)</span>
                    </div>

                    <!-- Confirm- Password-->
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i> </div>
                            @Html.PasswordFor(x => x.Confirm_Password, new { @class = "form-control", @placeholder = "Confirm password" })

                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(model => model.Confirm_Password)</span>
                    </div>

                    <!--Contact Number-->
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-mobile" aria-hidden="true"></i></div>
                            @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control", @placeholder = "Mobile" })

                        </div>
                        <span style="color:white">@Html.ValidationMessageFor(model => model.MobileNo)</span>
                    </div>

                    <!--Email-->
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></div>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })

                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(x => x.Email)</span>
                    </div>

                    <!--Image Upload-->
                    <div class="form-group">
                        <span>Add Image</span>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-circle" aria-hidden="true"></i></div>
                            <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />
                        </div>

                    </div>
                    <!--Date of Birth-->
                    <div class="form-group">
                        <span class="text">Date of Birth</span>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></div>
                            @Html.TextBoxFor(x => x.Birthdate, new { @class = "form-control", @placeholder = "dd/MM/yyyy    " })
                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(x => x.Birthdate)</span>
                    </div>
                    <!--Age field-->
                    <div class="form-group">
                        <span class="text">AGE</span>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></div>
                            @Html.TextBoxFor(x => x.Age, new { @class = "form-control", @placeholder = "Enter Age" })
                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(x => x.Age)</span>
                    </div>


                    <!--Gender-->
                    <div class="form-group">
                        <span class="text">Gender</span>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-user-o" aria-hidden="true"></i></div>

                            @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
                    { new SelectListItem{Text="Male", Value="M"},
                      new SelectListItem{Text="Female", Value="F"}}, "Please select")

                        </div>
                        <span style="color:white"> @Html.ValidationMessageFor(x => x.Gender)</span>
                    </div>

                    <!--Validtion Summary-->
                    <p>
                        @Html.ValidationSummary(false, "")
                    </p>


                    <!--Reset Ann Sumbit button-->
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-success bottom-left" />
                        <input type="reset" value="Reset" class="btn btn-danger bottom-right" />
                    </div>
                </div>

            }
        </div>
    </div>

</body>
</html>
