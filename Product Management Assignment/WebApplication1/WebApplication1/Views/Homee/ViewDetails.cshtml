@model WebApplication1.Models.Prodetails
@{
    Layout = null;
    <!--User Must login to accsess this view-->
    <!--Redirect to Login Page-->
    if (Session["ad_id"] == null)
    {
        Response.Redirect("~/Admin/login");
    }
}

<html>
<head>
    <title>Product Detail</title>
    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Fontawesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <!--Custom Css-->
    <link href="~/Style/ViewDetails.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <!--Image of Product-->
        <div class="col-lg-4 col-md-4 col-sm-4">

            <img src="@Url.Content(@Model.Image)" style="width:100%; height:450px;" />

        </div>

        <!--Details of Product-->
        <div class="col-lg-8 col-md-8 details">
            <div class="row">
                <!--Inner left-->
                <div class="col-lg-4 col-md-4 Inner-left-detail">
                    <span>Name:</span>
                    <br />
                    <br />
                    <br />
                    <span>Quantity:</span>
                    <br />
                    <br />
                    <br />
                    <span>Category:</span>
                    <br />
                    <br />
                    <br />
                    <span>Price:</span>
                    <br />
                    <br />
                    <br />
                    <span>Short Description:</span>
                    <br />
                    <br />
                    <br />
                    <span>Description:</span>
                    <br />
                </div>

                <!--Inner right-->
                <div class="col-lg-8 col-md-8 Inner-right-detail">
                    <span>@Model.Name</span>
                    <br />
                    <br />
                    <br />
                    <span>@Model.Quantity</span>
                    <br />
                    <br />
                    <br />
                    <br />
                    <span>@Model.Category</span>
                    <br />
                    <br />
                    <br />
                    <br />
                    <span>@Model.Price</span>
                    <br />
                    <br />
                    <br />
                    <span>@Model.ShortDescription</span>
                    <br />
                    <br />
                    <br />
                    <span>@Model.Description</span>
                    <br />
                </div>
            </div>

        </div>
    </div>
</body>
</html>


